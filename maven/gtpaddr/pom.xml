<?xml version="1.0"?>
<project>
  <parent>
    <groupId>com.ericsson.probe_distributorMerger</groupId>
    <artifactId>probe-distributorMerger</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>gtpaddr</artifactId>
  <packaging>nar</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-nar-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <decorateLinkerOptions>false</decorateLinkerOptions>
          <linker>
            <name>g++</name>
            <options>
              <option>-nodefaultlibs</option>
              <option>-static-libgcc</option>
              <option>-L${basedir}/../lib</option>
            </options>
            <libs>
              <lib>
                <name>pcap_s</name>
                <type>static</type>
                <directory>${basedir}/../lib/</directory>
              </lib>
              <lib>
                <name>json</name>
                <type>static</type>
                <directory>${basedir}/../lib/</directory>
              </lib>
              <lib>
                <name>pthread</name>
                <type>static</type>
                <directory>${basedir}/../lib/</directory>
              </lib>
              <lib>
                <name>c</name>
                <type>static</type>
                <directory>${basedir}/../lib</directory>
              </lib>
              <lib>
                <name>stdc++</name>
                <type>static</type>
                <directory>${basedir}/../lib</directory>
              </lib>
            </libs>
          </linker>
          <c>
            <sourceDirectory>
          	${basedir}/src/main/c++/
          </sourceDirectory>
            <excludes>
              <exclude>**/chunkpcapfile.c</exclude>
              <exclude>**/decodegtp.c</exclude>
              <exclude>**/gtpimsieua.c</exclude>
              <exclude>**/gtpuntunnel.c</exclude>
              <exclude>**/pcapdistributer.c</exclude>
              <exclude>**/pcapfilestats.c</exclude>
              <exclude>**/pcapmerger.c</exclude>
              <exclude>**/usectstamp.c</exclude>
            </excludes>
            <systemIncludePaths>
              <systemIncludePath>${basedir}/../include</systemIncludePath>
              <systemIncludePath>${basedir}/../include_gtpc</systemIncludePath>
            </systemIncludePaths>
            <options>
              <option>-nostdinc</option>
              <option>-g</option>
              <option>-fstack-protector-all</option>
              <option>-std=gnu99</option>
            </options>
          </c>
          <libraries>
            <library>
              <type>executable</type>
              <!-- <linkcpp>false</linkcpp> -->
            </library>
          </libraries>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
